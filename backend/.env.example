# Database Configuration
# IMPORTANT: You must create the PostgreSQL database first:
# sudo -u postgres psql
# CREATE DATABASE blackbow;
# CREATE USER blackbow_user WITH ENCRYPTED PASSWORD 'your_secure_password';
# GRANT ALL PRIVILEGES ON DATABASE blackbow TO blackbow_user;
DATABASE_URL=postgresql://blackbow_user:YOUR_DB_PASSWORD_HERE@localhost:5432/blackbow

# Server Configuration
PORT=3450
HOST=127.0.0.1
NODE_ENV=production
LOG_LEVEL=info
LOG_DIR=/var/log/desaas

# JWT Authentication
# Generate a secure random string (minimum 32 characters)
JWT_SECRET=CHANGE_THIS_TO_SECURE_RANDOM_STRING_MIN_32_CHARS
JWT_EXPIRES_IN=7d

# Google OAuth 2.0
# Get these from: https://console.cloud.google.com/ (APIs & Services → Credentials)
GOOGLE_CLIENT_ID=XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=XXXXXX-XXXXXXXXXXXXXXXXXXXXXXX

# Stripe Payments
# Get these from: https://stripe.com/ (Developers → API Keys)
# Use TEST mode initially, switch to LIVE for production
STRIPE_SECRET_KEY=sk_test_XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
STRIPE_PUBLISHABLE_KEY=pk_test_XXXXXXXXXXXXXXXXXXXXXXXXXXXX
# Webhook secret from: Developers → Webhooks → Add endpoint
STRIPE_WEBHOOK_SECRET=whsec_XXXXXXXXXXXXXXXXXXXXXXXXX

# Pipedrive CRM
# Get these from: https://pipedrive.com/ (Settings → Personal Preferences → API)
PIPEDRIVE_API_TOKEN=XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
# Create a random secret for webhook verification
PIPEDRIVE_WEBHOOK_SECRET=XXXXXXXXXXXXXXXXXXXX

# Application Settings
LEAD_PRICE=20
# Maximum purchases per lead per vendor type (default: 5)
VENDOR_TYPE_PURCHASE_LIMIT=5
FRONTEND_URL=https://blackbowassociates.com
API_BASE_URL=https://api.blackbowassociates.com

# Admin Access
# This code is required for admin panel access (in addition to Clerk login)
# CHANGE THIS to a secure random string!
ADMIN_VERIFICATION_CODE=CHANGE_THIS_TO_SECURE_RANDOM_STRING

# Telegram Notifications (Already configured on VPS)
# These should already be in your system environment
# TELEGRAM_BOT_TOKEN=<already set>
# TELEGRAM_CHAT_ID=<already set>
